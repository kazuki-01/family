<%= render 'shared/header' %>
<div class="post-index">
  <div class="container">
    
      <div class="heading">
        <div class="nav">
          <%= link_to "タスク", "/", {class: "btn"} %>
          <%= link_to "分析", "/" %>
        </div>
      </div>

      <div class="mein-wrapper">
       <div class="task-wrapper">
       <% @posts.each do |post| %>
        <% if post.emphasis %>
          <div class="field-emphasis">
            <label for="radio-1" class="radio-label">
              <%= image_tag("/photo/check_btn.png", class:"check", :size => "50x50")%>

              <div class="task">
                <%= link_to post.task, edit_post_path(post.id) %>
              </div>
            </label>
          </div>
          <% else %>
          <div class="field">
            <label for="radio-1" class="radio-label">
              <%= image_tag("/photo/check_btn.png", class:"check", :size => "50x50")%>

              <div class="task">
                <%= link_to post.task, edit_post_path(post.id) %>
              </div>
            </label>
          </div>
        <% end %>
      <% end %>
       </div>

       <div class="done-wrapper">
         <div class="done">
         <p>完了したタスク</p>
         <div class="field">
          <div class="chat">
            <% if current_user.user_icon.attached? %>
              <%= image_tag current_user.user_icon, :size => "50x50" %>
            <% else %>
              <%= image_tag("default_icon.png", :size => "50x50") %>
            <% end %>
            <div class="time">
              <p>2022/11/03  8:45</p>
            </div>
            <div class="task">
              <p>洗濯物を干す</p>
            </div>
            <div class="thanks">
              <a href="#">お礼の言葉を送る</a>
            </div>
          </div>
         </div>
       </div> 
       <div class="btn">
        <%= link_to image_tag("/photo/plus.png", class:"btn", :size => "85x85"), new_post_path %>
       </div>
     </div>


        <%= current_user.email %>
        <% if current_user.user_icon.attached? %>
          <%= image_tag current_user.user_icon, :size => "50x50" %>
        <% else %>
          <p><%= image_tag("default_icon.png", :size => "50x50") %></p>
        <% end %>



        <%= link_to "Log out", destroy_user_session_path, class: "#", data: { turbo_method: :delete, turbo_confirm: " 本当にログアウトしますか？"} %>
  </div>
</div>


