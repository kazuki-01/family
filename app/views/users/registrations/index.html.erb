<div class="user-index">
  <header>
    <div class="header-left">
      <%= link_to image_tag("/photo/arrow.png", class:"index", :size => "83x83"), 'javascript:history.back()'  %>
    </div>
    <div class="headding">
      <p>ホーム</p>
    </div>
  </header>
  <div class="mein-wrapper">
    <div class="container">
      <h3>ファミリーネーム</h3>
      <div class="form-wrapper">
        <%= form_with url: groups_update_path, scope: :group do |form|%>
        <div class="text-form">
          <%=form.text_field :group_name %>
        </div>
        <div class="btn-wrapper">
          <%= form.submit "更新"%>  
        </div>
        <% end %> 
      </div>
      <div class="users-wrapper">
        <% @users.each do |user| %>
        <div class="user">
          <div class="image">
            <% if User.find(user.id).user_icon.attached? %>
              <%= image_tag User.find(user.id).user_icon, :size => "50x50" %>
            <% else %>
              <%= image_tag("default_icon.png", :size => "50x50") %>
            <% end %>
          </div>
          <div class="name">
            <p><%= user.name %></p>
          </div>
        </div>
        <% end %>
      </div>
      <div class="btn-wrapper">
        <%= link_to "招待する", new_user_invitation_path %>  
      </div>
      <div class="btn">
        <%= link_to "退会する", new_user_registration_path %>
      </div>
      <div>
      </div>
    </div>
  </div>
</div>