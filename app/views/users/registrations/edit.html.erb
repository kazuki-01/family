<div class="user-edit">
  <div class="container">
    <header>
      <%= image_tag("/photo/arrow.png", class:"edit", :size => "83x83")%>
      <p>ユーザー設定</p>
    </header>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%=f.label :user_icon, "ユーザーアイコン" %><br>
        <% if current_user.user_icon.attached? %>
          <%= image_tag current_user.user_icon, :size => "160x160" %>
        <% else %>
          <p><%= image_tag("default_icon.png", :size => "160x160") %></p>
        <% end %>
        <%= f.file_field :user_icon %>
      </div>

      <div class="field">
        <%= f.label :name, "お名前" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :current_password, "パスワード" %> <br>
        <font color=””><i>※変更するには現在のパスワードが必要です</i><br/></font>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "更新する" %>
      </div>
    <% end %>

    <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

    <%= link_to "Back", :back %>

  </div>
</div>
